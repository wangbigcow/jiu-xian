div.header{
	width: 1000px;
	height: 88px;
	margin:0 auto;
	margin-bottom:50px;
}
div.container-nav{
	width:147px;
	height:88px;
	float: left;
}
a.nav-a-1{
	width: 140px;
	height:63px;
	margin-left:0;
	margin-top:10px;
	cursor: pointer;
	display: block;
	float: left;
}
a.nav-a-2{
	display: block;
	width: 140px;
	height:63px;
	margin-top:10px;
	cursor: pointer;
	float: left;
	margin-left: 0px;
}

div.nav-div{
	width:240px;
	height: 88px;
	float: right;
	font-size:12px;
}
p.nav-p{
	float: left;
	margin-top:50px;
}
div.nav-div a{
	float: left;
	margin-top:50px;
	text-decoration: none;
	color: black;
}
a.nav-a-4{
	margin-left: 15px;
}
a.nav-a-3{
	margin-left: 15px;
}
a.nav-a-3:hover{
	color:red;
	border-bottom:1px solid black;
}
div.main{
	width: 100%;
	height: 600px; 
	background: url(../image/bg.jpg);
	background-repeat: repeat-x;
	background-position: center;
}
div.footer{
	width: 100%;
	height: 100px;
	text-align: center;
	margin-top:100px;
}
p.footer-p-1{
	width: 700px;
	height:30px;
	font-size: 12px;
	margin: 0 auto;
}
p.footer-p-2{
	width: 700px;
	height:30px;
	font-size: 12px;
	color: red;
	margin: 0 auto;
}
